{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for a Loan Application.",
        "title": "Loan App API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Ghalmas Shanditya Putra Agung",
            "email": "ghalmas.shanditya.putra.agung@gmail.com"
        },
        "version": "1.0"
    },
    "host": "localhost:3000",
    "basePath": "/v1",
    "paths": {
        "/auth/sign-in": {
            "post": {
                "description": "Authenticate user with nik and password to get access and refresh tokens",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Sign in user",
                "parameters": [
                    {
                        "description": "Sign in credentials",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.SignInRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.SignInResponseWrapper"
                        }
                    }
                }
            }
        },
        "/auth/sign-up": {
            "post": {
                "description": "Register a new user with nik, full_name, and other details",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Sign up user",
                "parameters": [
                    {
                        "description": "Sign up credentials",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.SignUpRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.SignUpResponseWrapper"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.SignInRequest": {
            "type": "object",
            "required": [
                "nik",
                "password"
            ],
            "properties": {
                "nik": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "model.SignInResponse": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                }
            }
        },
        "model.SignInResponseWrapper": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/model.SignInResponse"
                },
                "ok": {
                    "type": "boolean"
                }
            }
        },
        "model.SignUpRequest": {
            "type": "object",
            "required": [
                "date_of_birth",
                "full_name",
                "id_card_photo_url",
                "legal_name",
                "nik",
                "password",
                "place_of_birth",
                "salary",
                "selfie_photo_url"
            ],
            "properties": {
                "date_of_birth": {
                    "type": "string"
                },
                "full_name": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 3
                },
                "id_card_photo_url": {
                    "type": "string"
                },
                "legal_name": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 3
                },
                "nik": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "place_of_birth": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2
                },
                "salary": {
                    "type": "integer",
                    "minimum": 0
                },
                "selfie_photo_url": {
                    "type": "string"
                }
            }
        },
        "model.SignUpResponse": {
            "type": "object"
        },
        "model.SignUpResponseWrapper": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/model.SignUpResponse"
                },
                "ok": {
                    "type": "boolean"
                }
            }
        }
    },
    "securityDefinitions": {
        "bearer": {
            "description": "Enter the token with the `Bearer ` prefix, e.g. \"Bearer abcde12345\"",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}